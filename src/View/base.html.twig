                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-navicon fa-fw"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li><a href="{{app.request.basepath}}/index.php/notimplemented"><i class="fa fa-tasks fa-fw"></i> Task management</a></li>
                            <li><a href="{{app.request.basepath}}/index.php/notimplemented"><i class="fa fa-calendar fa-fw"></i> Calendar </a></li>
                            <li><a href="{{app.request.basepath}}/index.php/notimplemented"><i class="fa fa-area-chart fa-fw"></i> Reports</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    {% block toolbar %}{% endblock %}

    <div class="container">
        {% block content %}{% endblock %}
    </div>

    <!-- jQuery -->
    <script src="{{app.request.basepath}}/bower_components/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="{{app.request.basepath}}/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

    <!-- W2UI -->
    <script src="{{app.request.basepath}}/bower_components/w2ui/w2ui-1.4.3.min.js"></script>

    <!-- Worklog JavaScript -->
    <script src="{{app.request.basepath}}/js/worklog.js"></script>
    
    {% block javascripts %}
