{# Dashboard page #}
{% extends "base.html.twig" %}

{% block title %}{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block toolbar %}  
<div class="toolbarline">
    <button type="button" class="btn btn-default"> 
        <i class="fa fa-save fa-fw"></i>Save
    </button>
</div>
{% endblock %}

{% block content %}
    <div id="dateBar" class="dateBar">
        <table style="width:100%" class="dateBar">
            <tr>
                <td>Workday</td>
                <td><div id="dateTitle" style="text-align: right">{{ selectedDate }}</div></td>
            </tr>
        </table>
    </div>
    <div id="formDay" style="width:100%;" class="workdayForm">
        <div style="padding: 0px;">
            <table>
                <tr>
                    <td>
                        <div class="workdayForm label">Date:</div>
                    </td>
                </tr>
                <tr>
                    <td>
                    <div class="workdayForm input"> <input name="selectedDate"> </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="workdayForm label">From:</div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="workdayForm input"> <input name="startTime"></div>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div id="gridDay" style="width:100%; height:250px;"></div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{app.request.basepath}}/js/view/workday.js"></script>
{% endblock %}
