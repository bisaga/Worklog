{
    "extends": "standard",
    "parserOptions": {
        "ecmaVersion": 5,
        "sourceType": "script"
    },
    "plugins": [
        "standard"
    ],
    "rules": {
        "semi": ["error", "always"],
        "eqeqeq": ["error", "allow-null"],
        "space-before-function-paren": ["error", { "anonymous": "always", "named": "never" }],
        "padded-blocks": ["error", "never"]
    }
}